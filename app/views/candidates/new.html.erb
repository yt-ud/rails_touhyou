<%= form_with(model: @candidate, data: { turbo_confirm: "これで作成しますか？" }, class: "form_column") do |f| %>
    <%= f.label :候補者名, class:"margin-top-field margin-bottom-label" %>
    <%= f.text_field :name, class:"margin-bottom-field" %>
    <%= f.label :一言, class:"margin-bottom-label" %>
    <%= f.text_field :comment, class:"margin-bottom-field" %>
    <%= f.hidden_field :myelection, :value => @myelection.id, class:"margin-bottom-field" %>
    <%= f.submit :候補者を作成, class:"btn btn-primary margin-top-button" %>
<% end %>

