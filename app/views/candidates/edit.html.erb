<%= form_with url:candidate_path(@candidate.id), method: :put, class:"form_column" do |f| %>
    <%= f.label :候補者名, class:"margin-top-field margin-bottom-label" %>
    <%= f.text_field :name, class:"margin-bottom-field", value:@candidate.name %>
    <%= f.label :一言, class:"margin-bottom-label" %>
    <%= f.text_field :comment, class:"margin-bottom-field", value:@candidate.comment %>
    <%= f.submit :候補者を更新, class:"btn btn-primary margin-top-button" %>
<% end %>
