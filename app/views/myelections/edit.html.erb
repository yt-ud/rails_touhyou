<%= form_with url:myelection_path(@myelection.id), method: :put, class:"form_column" do |f| %>
    <%= f.label :投票室名, class:"margin-top-field margin-bottom-label" %>
    <%= f.text_field :name, class:"margin-bottom-field", value:@myelection.name %>
    <%= f.label :詳細, class:"margin-bottom-label" %>
    <%= f.text_field :description, class:"margin-bottom-field", value:@myelection.description %>
    <%= f.label :投票開始年月日時分, class:"margin-bottom-label" %>
    <%= f.datetime_field :startdate, class:"margin-bottom-field", value:@myelection.startdate.strftime('%Y-%m-%dT%T') %>
    <%= f.label :投票終了年月日時分, class:"margin-bottom-label" %>
    <%= f.datetime_field :enddate, class:"margin-bottom-field", value:@myelection.enddate.strftime('%Y-%m-%dT%T') %>
    <%= f.label :入室用パスワード, class:"margin-bottom-label" %>
    <%= f.text_field :password, class:"margin-bottom-field", value:@myelection.password %>
    <%= f.submit :投票室を更新, class:"btn btn-primary margin-top-button" %>
<% end %>
