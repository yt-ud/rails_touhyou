<%= form_with(url: myelections_path, data: { turbo_confirm: "これで作成しますか？" }, class: "form_column") do |f| %>
    <%= f.label :投票ルーム名, class:"margin-top-field margin-bottom-label" %>
    <%= f.text_field :name, class:"margin-bottom-field" %>
    <%= f.label :詳細, class:"margin-bottom-label" %>
    <%= f.text_field :description, class:"margin-bottom-field" %>
    <%= f.label :投票開始年月日時分, class:"margin-bottom-label" %>
    <%= f.datetime_field :startdate, class:"margin-bottom-field" %>
    <%= f.label :投票終了年月日時分, class:"margin-bottom-label" %>
    <%= f.datetime_field :enddate, class:"margin-bottom-field" %>
    <%= f.label :入室用パスワード, class:"margin-bottom-label" %>
    <%= f.text_field :password, class:"margin-bottom-field" %>
    <%= f.submit :投票を作成, class:"btn btn-primary margin-top-button" %>
<% end %>

