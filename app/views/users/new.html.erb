<%= form_with model: User.new, class:"form_column" do |f| %>
    <%= f.label :アカウント名, class:"margin-top-label margin-bottom-label" %>
    <%= f.text_field :name, class:"margin-bottom-field" %>
    <%= f.label :メールアドレス, class:"margin-bottom-label" %>
    <%= f.email_field :email, class:"margin-bottom-field" %>
    <%= f.label :パスワード, class:"margin-bottom-label" %>
    <%= f.password_field :password, class:"margin-bottom-field" %>
    <%= f.password_field :password_confirmation, class:"margin-bottom-field" %>
    <%= f.submit :新規登録, class:"btn btn-primary margin-top-button" %>
<% end %>

<%= form_with url: login_path, class:"form_column margin-top-button" do |f| %>
    <%= f.label :メールアドレス, class:"margin-top-field margin-bottom-label" %>
    <%= f.email_field :email, class:"margin-bottom-field" %>
    <%= f.label :パスワード, class:"margin-bottom-label" %>
    <%= f.password_field :password, class:"margin-bottom-field" %>
    <%= f.submit :ログイン, class:"btn btn-primary margin-top-button" %>
<% end %>