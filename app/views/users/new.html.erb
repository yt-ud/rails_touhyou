<%= form_with model: User.new do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit :signup, class:"btn btn-primary" %>
<% end %>

<%= form_with url: login_path do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit :signin, class:"btn btn-primary" %>
<% end %>